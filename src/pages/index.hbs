<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <link rel="icon" type="image/png" sizes="32x32" href="https://cdn.glitch.global/18cb6033-64fe-4752-b71c-014f9f66a361/favicon-32x32.png?v=1648063760858">

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <title>Grocery Assistant</title>

    <!-- import the webpage's stylesheet -->
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>

    <div class="container-fluid">

      <div class="vstack gap-2 mb-4">
        <b onclick="location.href = '/';" style="cursor: pointer">
          üçî Grocery Assistant
        </b>

        <p>
          Group the items on your grocery list by aisle in a grocery store. Powered by
          OpenAI and GPT-3.
        </p>
      </div>

      <form method="POST" action="/">

        <div class="row">

          <div class="col-md">

            <div class="mb-3">
              <label for="input" class="form-label">Paste your grocery list
                here:</label>
              <textarea
                class="form-control"
                id="input"
                name="input"
                rows="10"
                required="true"
              >{{input}}</textarea>
            </div>
            
            <div class="mb-4">

              <button
                id="submit"
                type="submit"
                class="btn btn-primary"
              >Submit</button>

              <button
                id="example"
                type="button"
                class="btn btn-secondary"
              >Example</button>
              
            </div>

          </div>

          <div class="col-md">

            <div class="mb-3">
              <label for="output" class="form-label">Copy the output from here:</label>
              <textarea
                class="form-control"
                id="output"
                name="output"
                rows="10"
                readonly="true"
              >{{output}}</textarea>
            </div>

          </div>

        </div>

      </form>
      
      <div class="mb-5">
        <pre><code>curl https://api.openai.com/v1/engines/text-davinci-edit-001/edits \
-H "Content-Type: application/json" \
-H "Authorization: Bearer YOUR_API_KEY" \
-d '{"instruction": "<mark>Group the items on this grocery list by aisle in a grocery store.</mark>", "temperature": 0, "input": request.body.input}'</code></pre>
      </div>
      
      <div>
        <a href="https://glitch.com/edit/#!/remix/grocery-assistant"><img
              src="https://cdn.glitch.com/2703baf2-b643-4da7-ab91-7ee2a2d00b5b%2Fremix-button-v2.svg"
              alt="Remix on Glitch"
            /></a>        
      </div>

    </div>

    <script>

      var example = document.getElementById("example");
      
      example.addEventListener("click", function(event) {
        var input = document.getElementById("input");
        input.innerHTML = `12 ounces white, cremini or stuffing mushrooms, cut into 1/2-inch pieces
3 large poblano chiles (12 ounces), seeded and cut into 1-inch pieces 
1 medium sweet potato (8 ounces), peeled and cut into 1/2-inch cubes
2 garlic cloves, minced
1 teaspoon dried oregano
1 teaspoon smoked paprika
¬º cup extra-virgin olive oil
Kosher salt and black pepper
1 cup shredded Monterey Jack (4 ounces)
1 Haas avocado, mashed with a fork
4 (9- to 10-inch) flour tortillas
¬Ω cup sour cream
1 packed cup shredded butter or bibb lettuce 
¬Ω cup pico de gallo or salsa, store-bought or homemade`; });

    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

  </body>
</html>